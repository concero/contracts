{
  "name": "@se-2/hardhat",
  "version": "0.0.1",
  "scripts": {
    "account": "hardhat run scripts/listAccount.ts",
    "chain": "hardhat node --network hardhat --no-deploy",
    "compile": "hardhat compile",
    "deploy": "hardhat deploy",
    "size": "hardhat size-contracts",
    "flatten": "hardhat flatten",
    "fork": "MAINNET_FORKING_ENABLED=true hardhat node --network hardhat --no-deploy",
    "format": "prettier --write ./*.ts ./deploy/**/*.ts ./scripts/**/*.ts ./test/**/*.ts",
    "format:sol": "prettier ./contracts/**/*.sol --write",
    "generate": "hardhat run scripts/generateAccount.ts",
    "hardhat-verify": "hardhat verify",
    "verify": "hardhat etherscan-verify",
    "lint": "eslint --config ./.eslintrc.json --ignore-path ./.eslintignore ./*.ts ./deploy/**/*.ts ./scripts/**/*.ts ./test/**/*.ts",
    "lint:fix": "eslint --config ./.eslintrc.json --ignore-path ./.eslintignore ./*.ts ./deploy/**/*.ts ./scripts/**/*.ts ./test/**/*.ts --fix",
    "lint:sol": "solhint ./contracts/**/*.sol",
    "lint-staged": "eslint --config ./.eslintrc.json --ignore-path ./.eslintignore",
    "test": "REPORT_GAS=false hardhat test --network hardhat",
    "clean": "rm -rf ./artifacts ./cache ./coverage ./typechain",
    "solhint": "solhint ./contracts/**/*.sol",
    "solhint:fix": "solhint --fix ./contracts/**/*.sol",
    "gas-report": "REPORT_GAS=true hardhat test --network hardhat",
    "slither": "slither ."
  },
  "dependencies": {
    "@chainlink/contracts": "^1.0.0",
    "@chainlink/contracts-ccip": "^1.4.0",
    "@chainlink/functions-toolkit": "^0.2.8",
    "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
    "@nomicfoundation/hardhat-viem": "^2.0.0",
    "@openzeppelin/contracts": "^4.9.6",
    "@typechain/ethers-v6": "~0.5.1",
    "bcrypto": "^5.5.2",
    "dotenv": "~16.0.3",
    "envfile": "~6.18.0",
    "ethers": "~6.10.0",
    "module-alias": "^2.2.3",
    "qrcode": "~1.5.1",
    "secp256k1": "^5.0.0",
    "viem": "^2.9.13"
  },
  "devDependencies": {
    "@ethersproject/abi": "~5.7.0",
    "@ethersproject/providers": "~5.7.1",
    "@nomicfoundation/hardhat-chai-matchers": "~2.0.3",
    "@nomicfoundation/hardhat-ethers": "~3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "~1.0.6",
    "@nomicfoundation/hardhat-verify": "~2.0.3",
    "@typechain/ethers-v5": "~10.1.0",
    "@typechain/hardhat": "~9.1.0",
    "@types/eslint": "~8",
    "@types/mocha": "~9.1.1",
    "@types/module-alias": "^2",
    "@types/prettier": "~2",
    "@types/qrcode": "~1",
    "@typescript-eslint/eslint-plugin": "~6.7.3",
    "@typescript-eslint/parser": "~6.7.3",
    "chai": "~4.3.6",
    "eslint": "~8.26.0",
    "eslint-config-prettier": "~8.5.0",
    "eslint-plugin-prettier": "~4.2.1",
    "hardhat": "~2.19.4",
    "hardhat-deploy": "~0.11.45",
    "hardhat-deploy-ethers": "~0.4.1",
    "hardhat-gas-reporter": "~1.0.9",
    "solidity-coverage": "~0.8.5",
    "ts-node": "~10.9.1",
    "typechain": "~8.1.0",
    "typescript": "~5.1.6"
  }
}
